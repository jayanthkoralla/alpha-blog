<% @article.each do |article| %>
<table class="articles-table">
<tr><th>Title</th></tr>
<tr><td> <%= article.title %> </td></tr>
<tr><th>Description</th></tr>
<tr><td><%= article.description %></td></tr>
<tr><th>UserName</th></tr>
<tr><td>
<%if article.user %>
<%= link_to article.user.username,user_path(article.user) %>
<% end %>
</td></tr>
<tr><th>Actions</th></tr>
<tr><td><%= link_to "Show",article %></td></tr>
<% if logged_in? && article.user ==current_user %>
<tr><td><%= link_to "Edit",edit_article_path(article) %></td></tr>
<tr><td><%= link_to "Delete",article_path(article),method: :delete %></td></tr>
<% end %>
</table>
<br><br>
<% end %>
